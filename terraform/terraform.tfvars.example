# Configuration Terraform pour Proxmox
# Copiez ce fichier vers terraform.tfvars et adaptez les valeurs

# ======================================
# API Proxmox
# ======================================
proxmox_api_url          = "https://10.129.4.31:8006/api2/json"
proxmox_api_token_id     = "root@pam!terraform"
proxmox_api_token_secret = "VOTRE_TOKEN_SECRET_ICI"  # À récupérer après setup-proxmox.sh
proxmox_tls_insecure     = true

# ======================================
# Configuration Proxmox
# ======================================
proxmox_node   = "pve"
template_name  = "debian-12-template"
storage_name   = "local-lvm"

# ======================================
# Configuration SSH
# ======================================
ssh_user     = "debian"
ssh_password = "debian123"  # Changez ce mot de passe !

# Clé publique SSH (contenu de ~/.ssh/id_rsa.pub)
# Remplacez par votre clé publique SSH
ssh_public_key = <<-EOT
ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... votre_cle_publique_ici ...
EOT

# ======================================
# Adresses IP des VMs
# ADAPTEZ CES VALEURS À VOTRE RÉSEAU
# ======================================
gitlab_ip  = "10.129.4.41"
infra1_ip  = "10.129.4.42"  # Master Kubernetes
infra2_ip  = "10.129.4.43"  # Worker 1
infra3_ip  = "10.129.4.44"  # Worker 2

# Passerelle réseau
gateway = "10.129.4.1"
